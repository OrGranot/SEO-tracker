<div class="col-6 flex-grow-1">
  <div class="card mt-5">
    <div class="card-header">
      <h2 class="text-primary">משתמש חדש</h2>
    </div>
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="d-flex gap-3 ">
          <div class="flex-grow-1">
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          label: "אימייל",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "אימייל" }%>
              <div class="d-flex gap-3">
                <div class="flex-grow-1">
                  <%= f.input :password,
                              label: "סיסמה",
                              required: true,
                              hint: ("#{@minimum_password_length} תווים לפחות" if @minimum_password_length),
                              input_html: { autocomplete: "סיסמה" } %>
                </div>
                <div class="flex-grow-1">
                  <%= f.input :password_confirmation,
                              label: "אישור סיסמה",
                              required: true,
                              input_html: { autocomplete: "אישור סיסמה" } %>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "הרשמה", class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
