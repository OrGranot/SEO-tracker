<div class="col-6 flex-grow-1">
  <div class="card mt-5">
    <div class="card-header">
      <h2 class="text-primary">התחברות</h2>
    </div>
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="d-flex gap-3 ">
          <div class="flex-grow-1">
            <%= f.input :email,
                        label: 'אימייל',
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "", class: "form-control" } %>
          </div>
          <div class="flex-grow-1">
            <%= f.input :password,
                        label: 'סיסמה',
                        required: false,
                        input_html: { autocomplete: "", class: 'form-control' } %>
          </div>
        </div>
        <div class="action-container d-flex align-items-center gap-3">
          <div class="form-actions">
            <%= f.button :submit, "התחבר", class: 'btn btn-primary' %>
          </div>
          <%= f.input :remember_me, label: 'זכור אותי', input_html: { class: '' }, as: :boolean if devise_mapping.rememberable? %>

        </div>
      <% end %>
      <%# <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
