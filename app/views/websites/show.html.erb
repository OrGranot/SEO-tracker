<p id="notice"><%= notice %></p>

  <h1><%= @website.name %></h1>
  <%= link_to @website.url, URI::HTTP.build({:host => @website.url}).to_s, class: 'link-primary', target: "_blank" %>


<br />
<table class="table table-striped mt-3">
  <thead>
    <tr>
      <th scope="col">Keywords</th>
      <% @dates.each do |date| %>
      <th scope="col" class="date"><%= date.strftime('%d/%m/%Y') %></th>
    <% end %>
    </tr>
  </thead>
  <tbody>

    <% @keywords.each do |keyword| %>
    <tr>
      <th class="keyword" scope="row"><%= keyword.key_string %></th>
      <% @dates.each do |date| %>

        <% search = keyword.searches.select{|search| search[:date] == date}[0] %>
        <% if search %>
          <td class = "rank"><%= search.rank %></td>
        <% else %>
          <td class = "rank"> - </td>
        <% end %>
      <% end %>
    </tr>
    <% end %>
   </tbody>
</table>


<div class="">
  <% keyword = Keyword.new %>
  <%= simple_form_for [ @website, keyword ] do |f| %>
    <%= f.input :key_string, :label => "keywords" %>
    <%= f.button :submit, class: "btn btn-primary" %>

<% end %>
</div>



<%= link_to "Check Ranks", website_search_add_path(@website) %> |
<%= link_to 'Edit', edit_website_path(@website) %> |
<%= link_to 'Back', websites_path %>
